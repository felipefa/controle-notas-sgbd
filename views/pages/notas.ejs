<!DOCTYPE html>
<html lang="pt-BR">

<% include ../partials/head.ejs %>

<body class="bg-secondary">
	<header>
		<% include ../partials/nav.ejs %>
	</header>

	<div class="container pt-3 text-white">
		<h2 class="py-3 text-center">Notas</h2>
		<div class="card bg-dark shadow-lg">
			<div class="card-body">
				<div class="input-group">
					<select class="custom-select rounded" id="seletorDisciplina" name="seletorDisciplina" aria-label="Seletor de disciplina para visualização das notas">
						<option disabled selected>Selecione uma disciplina...</option>
					</select>
					<div class="input-group-append">
						<button class="btn btn-outline-warning" type="button">Buscar</button>
					</div>
				</div>
				<p class="card-text my-3 text-center" id="carregando_notas" style="display: none;">Carregando dados...</p>
				<div class="mt-3" id="tabela_notas" style="display: none;">
					<div class="row">
						<div class="col-12 col-md-8 col-lg-6 my-2">
							<input type="text" class="form-control" id="pesquisar" name="pesquisar" placeholder="Pesquise um nota por nome, matrícula, CPF ou email...">
						</div>
						<div class="col my-2 text-center text-sm-right">
							<a href="#" class="btn btn-warning">Adicionar Nota</a>
						</div>
					</div>
					<table class="mt-3 rounded table table-dark table-hover table-responsive-md table-striped">
						<thead>
							<tr>
								<th scope="col">#</th>
								<th scope="col">Nome</th>
								<th scope="col">Matrícula</th>
								<th scope="col">CPF</th>
								<th scope="col">Email</th>
								<th scope="col"></th>
							</tr>
						</thead>
						<tbody id="tbody_notas"></tbody>
					</table>
				</div>
			</div>
		</div>
	</div>

	<% include ../partials/js.ejs %>
</body>

</html>