<div class="modal fade" id="modal_disciplinas" tabindex="-1" role="dialog" aria-labelledby="modal_disciplinas" aria-hidden="true">
	<div class="modal-dialog">
		<div class="bg-dark modal-content text-white">
			<div class="modal-header">
				<h5 class="modal-title" id="modal_titulo_disciplinas">Formulário da Disciplina</h5>
				<button type="button" class="close text-white" data-dismiss="modal" aria-label="Close">
					<span aria-hidden="true">&times;</span>
				</button>
			</div>
			<div class="modal-body">
				<!-- Início do Formulário do Disciplina -->
				<form id="form_disciplinas">
					<div class="dados_disciplinas">
						<div class="form-row">
							<div class="form-group col">
								<label for="nome">Nome da disciplina</label>
								<input type="text" class="form-control" name="nome" id="nome" maxlength="50" required>
							</div>
						</div>

						<div class="form-row">
							<div class="form-group col">
								<label for="codigo">Código (Ex.: CMP1097)</label>
								<input type="text" class="form-control codigo" name="codigo" id="codigo" maxlength="7" minlength="7" pattern="[A-Z]{3}[0-9]{4}" required>
							</div>
						</div>

						<div class="form-row justify-content-end text-right">
							<input type="hidden" name="id" id="id_disciplinas">
							<div class="col col-md-auto mt-3">
								<button type="button" class="btn btn-outline-light btn-block" data-dismiss="modal">
									Cancelar
								</button>
							</div>
							<div class="col col-md-auto ambos mt-3">
								<button type="submit" class="btn btn-warning btn-block" id="salvar_disciplinas">
									Salvar
								</button>
							</div>
						</div>
					</div>
				</form>
				<!-- Fim do Formulário do Disciplina -->
			</div>
		</div>
	</div>
</div>