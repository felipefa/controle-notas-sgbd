<div class="modal fade" id="modal_usuarios" tabindex="-1" role="dialog" aria-labelledby="modal_usuarios" aria-hidden="true">
	<div class="modal-dialog">
		<div class="bg-dark modal-content text-white">
			<div class="modal-header">
				<h5 class="modal-title" id="modal_titulo_usuarios">Editar Perfil</h5>
				<button type="button" class="close text-white" data-dismiss="modal" aria-label="Close">
					<span aria-hidden="true">&times;</span>
				</button>
			</div>
			<input type="hidden" name="idUsuario" id="idUsuario" value="<%= ( usuario ? usuario.id : '' ) %>">
			<div class="dados_usuarios modal-body bg-dark text-white">
				<form id="form_usuarios">
					<div class="row">
						<div class="form-group col">
							<label for="nome">Nome</label>
							<input type="text" class="form-control" id="nome" name="nome" maxlength="50" required value="<%= ( usuario ? usuario.nome : 'Sem usuÃ¡rio' ) %>">
						</div>
					</div>
					<div class="row">
						<div class="form-group col">
							<label for="sobrenome">Sobrenome</label>
							<input type="text" class="form-control" id="sobrenome" name="sobrenome" maxlength="100" required value="<%= ( usuario ? usuario.sobrenome : '' ) %>">
						</div>
					</div>
					<div class="row">
						<div class="form-group col">
							<label for="email">E-mail</label>
							<input type="email" class="form-control" id="email" name="email" maxlength="100" required value="<%= ( usuario ? usuario.email : '' ) %>">
						</div>
					</div>
					<div class="row">
						<div class="form-group col">
							<label for="administrador">Tipo de Perfil</label>
							<div class="custom-control custom-checkbox">
								<input class="custom-control-input" id="administrador" name="administrador" type="checkbox" value="<%= ( usuario ? usuario.administrador : '0' ) %>">
								<label class="custom-control-label" for="administrador">Administrador</label>
							</div>
						</div>
					</div>
					<div class="mt-3 row text-center">
						<div class="col">
							<button type="submit" class="btn btn-block btn-warning">Salvar</button>
						</div>
					</div>
				</form>
			</div>
		</div>
	</div>
</div>